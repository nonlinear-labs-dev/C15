{
  "layouts": {
    "Modulateable-Parameter-MC-Pos-Layout": {
      "Selector": {
        "UIFocus": "Parameters",
        "UIMode": "Select",
        "UIDetail": "ButtonA"
      },
      "Conditions": [
        "isParameterModulateable",
        "hasMcSelected"
      ],
      "Controls": {
        "ButtonA": {
          "Class": "HighlightButton",
          "Position": "3, 51",
          "Events": "MCPositionButtonText => Text[Text]"
        },
        "ButtonB": {
          "Class": "Button",
          "Position": "67, 51",
          "Events": "MCSelectButtonText => Text[Text]"
        },
        "ButtonC": {
          "Class": "Button",
          "Position": "131, 51",
          "Events": "MCAmountButtonText => Text[Text]"
        },
        "MCSelection-Label": {
          "Class": "Label",
          "Position": "67, 35",
          "Events": "MacroControlSymbol => Text[Text]"
        },
        "GroupLabel": {
          "Class": "InvertedLabel",
          "Position": "0, 0",
          "Events": "ParameterGroupName => Text[Text]"
        },
        "Slider": {
          "Class": "ParameterSlider",
          "Position": "77,  24 ",
          "Events": "SliderRange => Slider[Range], IsBipolar => CenterMark[Visibility]"
        },
        "ParameterName": {
          "Class": "ParameterNameLabel",
          "Position": "77, 10",
          "Events": "ParameterNameWithStateSuffix => Label[Text]"
        },
        "ModulationCarousel": {
          "Class": "ModulationCarousel",
          "Position": "195, 0"
        },
        "ModulationRange": {
          "Class": "ModRangeSlider",
          "Position": "77, 22",
          "Events": "MCModRange => UpperBar[Range], MCModRange => LowerBar[Range]"
        },
        "MCPositionSlider": {
          "Class": "MiniDotSlider",
          "Position": "8, 25",
          "Events": "MacroControlPosition => ValueDot[ControlPosition]",
          "Visibility": "MacroControlAsignment"
        },
        "MCPositionLabel": {
          "Class": "HighlightLabel",
          "Position": "6, 30",
          "Events": "MacroControlPositionText => Text[Text]",
          "Visibility": "MacroControlAsignment"
        },
        "MCAmountLabel": {
          "Class": "Label",
          "Position": "131, 35",
          "Events": "MacroControlAmount => Text[Text]",
          "Visibility": "MacroControlAsignment"
        }
      },
      "EventSinks": {
        "BUTTON_INC": "IncMCPos",
        "BUTTON_DEC": "DecMCPos",
        "BUTTON_A": "SwitchToInitDetail",
        "BUTTON_B": "SwitchToButtonBDetail",
        "BUTTON_C": "SwitchToButtonCDetail",
        "BUTTON_D": "SwitchToButtonDDetail"
      }
    }
  }
}