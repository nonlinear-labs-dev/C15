{
  "layouts": {
    "Modulateable-Parameter-MC-Select-Layout": {
      "Selector": {
        "UIFocus": "Parameters",
        "UIMode": "Select",
        "UIDetail": "ButtonB"
      },
      "Conditions": [
        "isParameterModulateable"
      ],
      "Controls": {
        "ButtonA": {
          "Class": "Button",
          "Position": "3, 51",
          "Visibility": "!MacroControlAsignment"
        },
        "ButtonAHighlight": {
          "Class": "Button",
          "Position": "3, 51",
          "Init": {
            "Text[Text]": "MC Pos"
          },
          "Visibility": "MacroControlAsignment"
        },
        "ButtonB": {
          "Class": "HighlightButton",
          "Position": "67, 51",
          "Init": {
            "Text[Text]": "MC Sel"
          }
        },
        "ButtonC": {
          "Class": "Button",
          "Position": "131, 51"
        },
        "MCSelection-Label": {
          "Class": "Label",
          "Position": "67, 35",
          "Events": "MacroControlSymbol => Text[Text]"
        },
        "GroupLabel": {
          "Class": "InvertedLabel",
          "Position": "0, 0",
          "Events": "ParameterGroupName => Text[Text]"
        },
        "Slider": {
          "Class": "ParameterSlider",
          "Position": "77,  24 ",
          "Events": "SliderRange => Slider[Range], IsBipolar => CenterMark[Visibility]"
        },
        "ParameterName": {
          "Class": "ParameterNameLabel",
          "Position": "77, 10",
          "Events": "ParameterNameWithStateSuffix => Label[Text]"
        },
        "ModulationCarousel": {
          "Class": "ModulationCarousel",
          "Position": "195, 0"
        },
        "ModulationRange": {
          "Class": "ModRangeSlider",
          "Position": "77, 22",
          "Events": "MCModRange => UpperBar[Range], MCModRange => LowerBar[Range]"
        },
        "MCPositionSlider": {
          "Class": "MiniDotSlider",
          "Position": "8, 25",
          "Events": "MacroControlPosition => ValueDot[ControlPosition], MacroControlAsignment => ValueDot[Visibility]"
        },
        "MCPositionLabel": {
          "Class": "Label",
          "Position": "6, 30",
          "Events": "MacroControlPositionText => Text[Text], MacroControlAsignment => Text[Visibility]"
        }
      },
      "EventSinks": {
        "BUTTON_INC": "IncMCSel",
        "BUTTON_DEC": "DecMCSel",
        "BUTTON_B": "SwitchToInitDetail",
        "BUTTON_D": "SwitchToButtonDDetail"
      }
    }
  }
}