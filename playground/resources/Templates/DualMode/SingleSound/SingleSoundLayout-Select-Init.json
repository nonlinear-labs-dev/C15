{
  "layouts": {
    "SplitSoundLayout-Select-Init": {
      "Selector": {
        "UIFocus": "Sound",
        "UIMode": "Select",
        "UIDetail": "Init"
      },
      "Conditions": [
        "isSingleSound"
      ],
      "Controls": {
        "SoundHeader": {
          "Class": "SoundHeader",
          "Position": "0,0",
          "Events": "SoundHeaderText => Text[Text]"
        },
        "EditbufferName": {
          "Class": "EditBufferNameLabel",
          "Position": "64, 0",
          "Events": "EditBufferName => Text[Text]"
        },
        "MasterTune": {
          "Class": "ParameterValueLabel",
          "Position": "34, 15",
          "Events": "MasterTuneValueText => Text[Text]"
        },
        "OutputLevel": {
          "Class": "ParameterValueLabel",
          "Position": "143, 15",
          "Events": "OutputLevelValueText => Text[Text]"
        },
        "ButtonA": {
          "Class": "ConvertToButton",
          "Position": "0,52"
        },
        "ButtonB": {
          "Class": "EmptyButton",
          "Position": "64,52"
        },
        "ButtonC": {
          "Class": "UnisonButton",
          "Position": "128,52"
        },
        "ButtonD": {
          "Class": "MasterButton",
          "Position": "192,52"
        }
      },
      "EventSinks": {
        "BUTTON_A": "SwitchToButtonADetail",
        "BUTTON_C": "SwitchToButtonCDetail",
        "BUTTON_D": "SwitchToButtonDDetail",
        "BUTTON_EDIT": "SwitchToEditMode"
      }
    }
  }
}
