{
  "layouts": {
    "Single-Sound-Select-Layout": {
      "Selector": {
        "UIFocus": "Sound",
        "UIMode": "Select",
        "UIDetail": "Init"
      },
      "Conditions": [
        "isSplitSound"
      ],
      "Controls": {
        "Header": {
          "Class": "InvertedLabel",
          "Position": "0, 0",
          "Events": "EditBufferTypeText => Text[Text]"
        },
        "Name": {
          "Class": "WideHighlightLabel",
          "Position": "64, 0",
          "Events": "CurrentVoiceGroupLabel => Text[Text]"
        },
        "ButtonA": {
          "Class": "Button",
          "Position": "BUTTON_A",
          "Events": "SelectVGButtonText => Text[Text]"
        },
        "ButtonB": {
          "Class": "Button",
          "Position": "BUTTON_B",
          "Events": "SoundParamsButtonText => Text[Text]"
        },
        "ButtonC": {
          "Class": "Button",
          "Position": "BUTTON_C",
          "Init": {
            "Text[Text]": "Voices.."
          },
          "Events": "SoundVoicesButtonText => Text[Text]"
        },
        "ButtonD": {
          "Class": "Button",
          "Position": "BUTTON_D",
          "Init": {
            "Text[Text]": "Master.."
          },
          "Events": "SoundMasterButtonText => Text[Text]"
        },
        "Left": {
          "Class": "SplitVoiceGroupI",
          "Position": "42, 17",
          "Init": {
            "VoiceGroupIdentifier[Text]": "I",
            "UpperText[Text]": "+12.00 st",
            "LowerText[Text]": "-3.5 dB",
            "ANY[Highlight]": "true"
          },
          "Events": "isCurrentVGI => ANY[Highlight], VGIMasterTuneText => LowerText[Text], VGIMasterVolumeText => UpperText[Text]"
        },
        "Right": {
          "Class": "SplitVoiceGroupII",
          "Position": "142, 17",
          "Init": {
            "VoiceGroupIdentifier[Text]": "II",
            "UpperText[Text]": "+12.00 st",
            "LowerText[Text]": "-3.5 dB",
            "ANY[Highlight]": "false"
          },
          "Events": "isCurrentVGII => ANY[Highlight], VGIIMasterTuneText => LowerText[Text], VGIIMasterVolumeText => UpperText[Text]"
        },
        "Split": {
          "Class": "SplitPoint",
          "Position": "116, 18",
          "Events": "SplitPointValue => Text[Text]"
        },
        "SyncIndicator": {
          "Class": "SyncSplitPointIndicator",
          "Position": "1, 14",
          "Events": "SyncSplitPointStatus => ANY[Visibility]"
        },
        "FX_L": {
          "Class": "FX_Label_L",
          "Position": "2, 20",
          "Init": {
            "TypeLabel[Text]": "FX",
            "VGI[Text]": "I",
            "VGII[Text]": "II"
          }
        },
        "I_TO_I": {
          "Class": "StraightLineArrowLeft",
          "Position": "25, 20",
          "Events": "ToFXIIUnder100 => ANY[Visibility]"
        },
        "I_TO_II": {
          "Class": "StraightLineArrowLeft",
          "Position": "25, 36",
          "Events": "ToFXIIOver0 => ANY[Visibility]"
        },
        "FX_R": {
          "Class": "FX_Label_R",
          "Position": "232, 20",
          "Init": {
            "TypeLabel[Text]": "FX",
            "VGI[Text]": "I",
            "VGII[Text]": "II"
          }
        },
        "II_TO_I": {
          "Class": "StraightLineArrowRight",
          "Position": "215, 20",
          "Events": "ToFXIOver0 => ANY[Visibility]"
        },
        "II_TO_II": {
          "Class": "StraightLineArrowRight",
          "Position": "215, 36",
          "Events": "ToFXIUnder100 => ANY[Visibility]"
        }
      },
      "EventSinks": {
        "BUTTON_A": "ToggleVoiceGroup",
        "BUTTON_B": "OpenPartScreen",
        "BUTTON_C": "SwitchToVoicesDetail",
        "BUTTON_D": "OpenMasterParameter",
        "BUTTON_INC": "IncSplitPoint",
        "BUTTON_DEC": "DecSplitPoint",
        "ROTARY_PLUS": "IncSplitPoint",
        "ROTARY_MINUS": "DecSplitPoint"
      }
    }
  }
}
